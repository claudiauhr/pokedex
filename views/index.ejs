<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs')%>
</head>
<body>
    <h1>Pokemon Manager</h1>
          <ul>
            <% for(let i = 0; i < data.length; i++) { %>
              <li >
                <div class="cards">
                  <a href="/pokemon/<%= i %>"><%= data[i].name %> <img src="<%= data[i].img%>"></a>
                </div>
                
                <!-- Delete-->
                <form id="del" action="/pokemon/<%= i %>?_method=DELETE" method="POST">
                    <input type="submit" value="DELETE" />
                </form>
                <!-- Edit -->
                <button id="edit">
                  <a href="/pokemon/<%= i %>/edit">EDIT</a>
                </button>
            </li>
            <% } %>
          </ul>
          <nav>
            <a href="/pokemon/new">Create a New Pokemon</a>
          </nav>
</body>
</html>